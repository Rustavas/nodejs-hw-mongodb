                      "description": "Contact's id",
                      "type": "string",
                      "example": "667abd055b7c7f7680f50275"
                    },
                    "name": {
                      "description": "Contact's name",
                      "type": "string",
                      "example": "Bobby Brown"
                    },
                    "phoneNumber": {
                      "description": "Contact's phone number",
                      "type": "string",
                      "example": "76078087607"
                    },
                    "email": {
                      "description": "Contact's email",
                      "type": "string",
                      "example": "bobby_browm@gmail.com"
                    },
